<Window
    x:Class="LoongEgg.LoongChart.Demo.PieShapes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lc="clr-namespace:LoongEgg.LoongChart;assembly=LoongEgg.LoongChart"
    xmlns:local="clr-namespace:LoongEgg.LoongChart.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Pie Sections"
    Width="320"
    Height="320"
    mc:Ignorable="d">
    <Window.Resources>
        <Style TargetType="{x:Type lc:PieShape}" />
    </Window.Resources>
    <Grid>

        <lc:PieShape
            AngleMax="180"
            AngleMin="270"
            Fill="Chocolate"
            RadiusMax="0.55"
            RadiusMin="0.75"
            Stroke="Blue"
            StrokeThickness="2" />

        <lc:PieShape
            AngleMax="90"
            AngleMin="0"
            Fill="Red"
            RadiusMax="0.65"
            RadiusMin="0.75" />

        <lc:PieShape
            AngleMax="90"
            AngleMin="0"
            Fill="Yellow"
            RadiusMax="0.55"
            RadiusMin="0.65" />

        <lc:PieShape
            AngleMax="90"
            AngleMin="0"
            Fill="Blue"
            RadiusMax="0.55"
            RadiusMin="0.45" />

    </Grid>
</Window>
